# Wazo Server Configuration
# Copy this to .env and fill in your values

# Server Settings
WAZO_HOST=0.0.0.0
WAZO_PORT=8765
WAZO_DEBUG=false

# AI Model Paths
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
# Options: tiny, base, small, medium, large
# Use 'cuda' if you have GPU support

# Language Model (Ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3:8b
# Alternative: mistral:7b, llama2:7b

# Text-to-Speech
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
TTS_SPEAKER=default
# Will be replaced with Nigerian voice models

# Nigerian Language Settings
DEFAULT_LANGUAGE=pidgin
# Options: pidgin, yoruba, igbo, hausa, nigerian_english

# Wake Word Detection
WAKE_WORD_THRESHOLD=0.5
WAKE_WORD_MODEL_PATH=models/wake_words/

# Voice Activity Detection
VAD_ENABLED=true
VAD_THRESHOLD=0.3

# Audio Settings
SAMPLE_RATE=16000
CHANNELS=1
CHUNK_SIZE=1024

# MCP Protocol
MCP_DISCOVERY_PORT=5353
MCP_TIMEOUT=30

# Data Collection
COLLECT_TRAINING_DATA=false
TRAINING_DATA_PATH=data/collected_audio/

# Performance
MAX_WORKERS=4
CACHE_ENABLED=true
CACHE_SIZE=100
